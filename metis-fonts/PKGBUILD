# Maintainer: pwnwriter < hey.nabeen@tuta.io > 

pkgname=metis-fonts
pkgver=1.0
pkgrel=5
pkgdesc="Fonts for metis-os"
url="https://github.com/metis-os/metis-utils"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	(find * -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/fonts/metis/{}" \;)
}


